{
  "name": "rss-reader",
  "version": "2.0.0",
  "description": "Desktop rss-reader for RSS/Atom",
  "main": "src/index.js",
  "scripts": {
    "start": "./node_modules/.bin/webpack --progress && electron ./src",
    "test": "node test/spectron_test.js && jest",
    "jest": "jest",
    "dev_jest": "jest --watch --verbose",
    "dev_jest_full": "jest --watchAll --coverage --verbose",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack --progress && node build.js",
    "jsx_build": "./node_modules/.bin/webpack --progress",
    "dev_build": "./node_modules/.bin/webpack --progress --watch",
    "pack": "NODE_ENV=production ./node_modules/.bin/webpack --progress && electron-builder --dir",
    "dist": "NODE_ENV=production ./node_modules/.bin/webpack --progress && electron-builder",
    "win_dist": "NODE_ENV=production ./node_modules/.bin/webpack --progress && electron-builder --win"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tools/enzyme.setup.js",
      "jest-localstorage-mock"
    ]
  },
  "build": {
    "appId": "electron-rss-reader",
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [
    "rss-reader",
    "RSS",
    "Atom",
    "electron"
  ],
  "author": "zonbitamago",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.4",
    "feedme": "^1.1.0",
    "file-loader": "^0.11.2",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.2.1",
    "moment": "^2.19.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-icons": "^2.2.7",
    "react-loading-animation": "^1.4.0",
    "react-redux": "^5.0.6",
    "react-tooltip": "^3.4.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.75.1",
    "style-loader": "^0.18.2",
    "sync-request": "^4.1.0",
    "uglify-es-webpack-plugin": "^0.10.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.8.1",
    "electron-builder": "^19.42.2",
    "electron-load-devtool": "^0.5.1",
    "electron-packager": "^9.1.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^20.0.4",
    "jest-localstorage-mock": "^2.0.1",
    "mockdate": "^2.0.2",
    "raf": "^3.4.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.0.0",
    "react-tools": "^0.13.3",
    "spectron": "^3.7.2"
  }
}
